{
  "name": "image-compressor",
  "version": "1.0.0",
  "description": "Full-stack image compression application",
  "main": "index.js",
  "scripts": {
    "install-all": "cd frontend && npm install",
    "start": "cd frontend && npm start",
    "dev": "cd frontend && npm start",
    "dev:local": "concurrently \"node dev-server.js\" \"cd frontend && npm start\"",
    "dev:api": "node dev-server.js",
    "dev:vercel": "vercel dev",
    "build": "cd frontend && npm run build",
    "postinstall": "npm run install-all"
  },
  "dependencies": {
    "formidable": "^3.5.1",
    "sharp": "^0.33.0",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["image", "compression", "react", "node", "vercel"],
  "author": "Shriyansh Agarwal",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
